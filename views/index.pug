extends layout

block content
  div(class="mui-row")
    div(class="mui-col-md-8 mui-col-md-offset-2 mui-panel")
      form.form(action="/sign-up" method="POST" class="mui-form form--primary" autocomplete="off")
        legend(id="form-legend") Sign Up
        div(class="mui-textfield")
          label(for="email") email
          input(type="email" name="email")
        div(class="mui-textfield")
          label(for="password") Password
          input(type="password" name="password")
        div(class="mui-textfield")
          label(for="passwordConfirm") Confirm Password
          input(type="password" name="passwordConfirm")
        input.button(type="submit" value="Submit" class="mui-btn mui-btn--raised btn--primary")
