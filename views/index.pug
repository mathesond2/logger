extends layout

block content
  if Object.keys(flashMessage).length
    p!= flashMessage
  form.form(action="/registerOrg" method="POST" autocomplete="off")
    h2 Are you an Admin of a Github Organization? register the org name and add a <a href='https://github.com/settings/tokens'>personal access token</a>.
    label(for="token") Personal Access Token
    input(type="text" name="token")
    label(for="orgName") Organization Name
    input(type="text" name="orgName")
    input.button(type="submit" value="Register")
