extends layout

block content
  if flashMessage
    p!= flashMessage
  h1 Add repos you want to be available to create issues in.
  form.form(action="/updateAvailableRepos" method="POST" autocomplete="off")
    //- label(for="repo") Repo
    //- select(name="repo")
    each repo in orgRepos
      //- option(value=repo.name) #{repo.name} - #{repo.description}
      div
        input(type='checkbox' name=repo.name)
        label(for=repo.name) #{repo.name} - #{repo.description}
    //- label(for="title") Issue Title
    //- input(type="text" name="title")
    //- label(for="description") Issue Description
    //- textarea(name="description") 
    input.button(type="submit" value="add")

